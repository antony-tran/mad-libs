<script type="text/javascript">
    function storeData() {
        if (sessionStorage) {
            const a_four = $("input").val().trim()
            sessionStorage.setItem('q_four', a_four)
        }
    }

    function stopEnterkey(evt) {
        if (evt.keyCode === 13) {
            return false
        }
    }
    document.onkeypress = stopEnterkey
</script>

