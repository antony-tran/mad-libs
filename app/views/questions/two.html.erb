<script type="text/javascript">
    function storeData() {
        if (sessionStorage) {
            const a_two = $("input").val().trim()
            sessionStorage.setItem('q_two', a_two)
        }
    }

    function stopEnterkey(evt) {
        if (evt.keyCode === 13) {
            return false
        }
    }
    document.onkeypress = stopEnterkey
</script>


<div class="questions-container">
    <div class="question-card-container">
        <div>How would you describe them?</div>
